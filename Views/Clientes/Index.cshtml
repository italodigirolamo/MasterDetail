@model IEnumerable<MasterDetail.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado Clientes</h1>

<p>
    <a class="btn btn-primary btn-sm" asp-action="Create">
        <i class="bi bi-plus-circle" style="font-size: 1rem; color: lightgray;"></i>
        Crear
    </a>

</p>
    
<form asp-controller="Clientes" asp-action="index" method="post">
 
    <p class="col-md-4  ">
    @* <p class="col-md-4 spinner-grow spinner-border-sm"> *@
        <i class="bi bi-search"></i>
        Buscar :
        <input type="text" name="searchString" class="form-control" />
        <input type="submit" value="@ViewData["currentFilter"]" class="btn btn-sm btn-dark" />
        @* <input type="submit" value="Search" class="btn btn-sm btn-dark" /> *@
    </p>
    <div class="col-1">
        <input type="number" class="form-control " />Items x Paginas </>
        <a class="btn btn-primary btn-sm">Aceptar</a>
    </div>


   
 </form>

<table class="table table-striped table-hover table-bordered">
    <thead class="table-dark ">
        <tr>
           @*  <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th> *@

            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.Nombre)</a>
            </th>
             
            
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.ClienteId">
                        <i class="bi bi-plus-circle" style="font-size: 1rem; color: lightgray;"></i> Editar  </a>
                    <a class="btn btn-secondary btn-sm" asp-action="Details" asp-route-id="@item.ClienteId">
                        <i class="bi bi-pencil" style="font-size: 1rem; color: lightgray;"></i> Detalle 
                    </a>
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.ClienteId">
                     <i class="bi bi-trash" style="font-size: 1rem; color: lightgray;"></i> Eliminar</a>
            </td>
        </tr>
}

    </tbody>

</table>
<div>
    <ul class="pagination">
        <li class="page-item disabled">
            <a class="page-link" href="#">&laquo;</a>
        </li>
        <li class="page-item active">
            <a class="page-link" href="#">1</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">2</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">3</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">4</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">5</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">&raquo;</a>
        </li>
    </ul>
</div>
 
 